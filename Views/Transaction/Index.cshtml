@model IEnumerable<Transaction>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> قائمة حركات البيع</h2>
        </div>
        <div class="col-6 text-end" asp_action="Index" asp-controller="Item">
            <a asp-controller="Transaction" asp-action="New" class="btn btn-primary">
                <i class="bi bi-file-plus"></i> &nbsp; اضافة فاتورة بيع جديدة
            </a>
        </div>
        <div class="row">
            <form class="d-flex">
                <input name="searchString" class="form-control me-1" type="search" placeholder="Search" aria-label="Search"></input>
                <button class="btn btn-dark" type="submit">بحث برقم الفاتورة </button>
            </form>

        </div>


    </div>
    <table class="table table-hover" id="tree-table">
        <thead>
            <tr>
                <th scope="col"> كود الحركة </th>
                <th scope="col"> تاريخ الحركة</th>
                <th scope="col"> كود العميل</th>
                @* <th scope="col"> كود الصنف</th>
                <th scope="col"> سعر الصنف</th>
                <th scope="col"> الكمية</th> *@
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {

                <tr class="table-primary">
                    <td scope="row" width="50%">
                        @transaction.TransactionId
                    </td>
                    <td width="50">@transaction.TransactionDate</td>
                    <td width="50">@transaction.CustomerId</td>
                    @* <td width="50">@transaction.transactionItem.ItemId</td>
                    <td width="50">@transaction.transactionItem.ItemPrice</td>
                    <td width="50">@transaction.transactionItem.ItemQuantity</td> *@
                    <td>

                        <a asp-controller="Transaction" asp-action="Edit" asp-route-ItemId="@transaction.TransactionId" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>


                        &nbsp;
                        <a asp-controller="Transaction" asp-action="Delete" asp-route-ItemId="transaction.TransactionId" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>

                    </td>

                </tr>
            }
        </tbody>


    </table>
</div>
