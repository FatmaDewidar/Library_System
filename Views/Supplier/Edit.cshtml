@model Supplier
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <bu class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> تعديل بيانات المورد</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="SupplierName">اسم المورد</label>
            <input asp-for="SupplierName" class="form-control"></input>
            <span asp-validation-for="SupplierName" class="text-bg-danger"></span>

        </div>

        <div class="mb-3">
            <label asp-for="Phone">رقم التليفون</label>
            <input asp-for="Phone" class="form-control"></input>
            <span asp-validation-for="Phone" class="text-bg-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="IdNo">رقم البطاقة</label>
            <input asp-for="IdNo" class="form-control"></input>
            <span asp-validation-for="IdNo" class="text-bg-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Email">بريد الكتروني</label>
            <input asp-for="Email" class="form-control"></input>
            <span asp-validation-for="Email" class="text-bg-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Address">عنوان</label>
            <input asp-for="Address" class="form-control"></input>
            <span asp-validation-for="Address" class="text-bg-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Country">دولة</label>
            <input asp-for="Country" class="form-control"></input>
            <span asp-validation-for="Country" class="text-bg-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="TaxCard">بطاقة ضريبية</label>
            <input asp-for="TaxCard" class="form-control"></input>
            <span asp-validation-for="TaxCard" class="text-bg-danger"></span>

        </div>


        <button type="submit" class="btn btn-primary" style="width:150px">تعديل</button>
        <a asp-action="Index" asp-controller="Supplier" class="btn btn-outline-primary" style="width-150px">
            عودة الي قائمة الموردين
        </a>
        <br></br>
        <div>

</form>


