@model Stock
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <bu class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">حذف مخزن</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="StockName">اسم المخزن</label>
            <input asp-for="StockName" class="form-control"></input>
            <span asp-validation-for="StockName" class="text-bg-danger"></span>

        </div>

        <div class="mb-3">
            <label asp-for="Description">الوصف</label>
            <input asp-for="Description" class="form-control"></input>
            <span asp-validation-for="Description" class="text-bg-danger"></span>

        </div>
        


        <button type="submit" class="btn btn-primary" style="width:150px">حذف</button>
        <a asp-action="Index" asp-controller="Stock" class="btn btn-outline-primary" style="width-150px">
            عودة الي قائمة المخازن
        </a>
        <br></br>
        <div>

</form>



