@using Library_System.ViewModels
@model List<TransactionViewTransactionItems>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> قائمة حركات البيع</h2>
        </div>
        <div class="col-6 text-end" >
            <a asp-controller="TransactionViewTransactionItems" asp-action="New" class="btn btn-primary">
                <i class="bi bi-file-plus"></i> &nbsp; اضافة فاتورة بيع جديدة
            </a>
        </div>
        <div class="row">
            <form class="d-flex">
                <input name="searchString" class="form-control me-1" type="search" placeholder="Search" aria-label="Search"></input>
                <button class="btn btn-dark" type="submit">بحث برقم الفاتورة </button>
            </form>

        </div>


    </div>
    <table class="table table-hover" id="tree-table">
        <thead>
            <tr>
                <th scope="col"> كود الحركة </th>
                <th scope="col"> تاريخ الحركة</th>
                <th scope="col">  السعر</th>
                <th scope="col"> كود العميل</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var transactionWithTransactionItems in Model)
            {

                <tr class="table-primary">
                    <td scope="row" width="50%">
                        @transactionWithTransactionItems.TransactionId
                    </td>
                    <td scope="row" width="50%">
                        @transactionWithTransactionItems.TransactionDate
                    </td>
                    <td scope="row" width="50%">
                        @transactionWithTransactionItems.ItemPrice
                    </td>
                    <td scope="row" width="50%">
                        @transactionWithTransactionItems.CustomerId
                    </td>

                    <td>
                    </td>

                </tr>
            }
        </tbody>


    </table>
</div>
